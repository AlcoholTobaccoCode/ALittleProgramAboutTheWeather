/* pages/main/main.wxss */

.content {
  font-family: '微软雅黑,宋体';
  font-size: 16px;
  height: 100vh;
  width: 100vw;
  color: white;
  background: linear-gradient(35deg, #cff, #fcc);
  /* background-image:url("http://tellstory.club/imgs/wxXCX/weather/bg.png"); */
  /* background-size: cover; */
}
.info {
  height: 80vh;
  width: 80vw;
  padding: 20px;
  margin:0 auto;
  background: #fff;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 10px;
  box-shadow: 10px 10px 20px rgba(255, 255, 255, 0.1);
}
.info view {
  margin: 15px 0;
}
.today {
  padding-top: 50rpx;
  height: 50%;
}

.newDate {
  font-size: 18px;
  color: rgb(0, 199, 119);
}

.hint {
  color: rgb(226, 218, 218);
  font-size: 16px;
  margin: 10px 0;
  text-align: center;
}

.city {
  color: white;
  font-size: 18px;
  text-align: right;
}

.temp {
  text-align: center;
}

.wendu {
  font-size: 32px;
}

.high {
  font-size: 16px;
}

.low {
  font-size: 16px;
  color: #d3c7c7;
}

.weather {
  text-align: center;
}

.msg {
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
}
.msg text{
  width: 100%;
}