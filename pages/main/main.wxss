/* pages/main/main.wxss */

.content {
  font-family: '微软雅黑,宋体';
  font-size: 14px;
  background-size: cover;
  height: 100vh;
  width: 100vw;
  color: white;
  background: linear-gradient(35deg, #cff, #fcc);
  /* background-image:url("http://tellstory.club/imgs/wxXCX/weather/bg.png"); */
}

.info {
  padding: 20px;
  background: #fff;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 10px;
  box-shadow: 10px 10px 20px rgba(255, 255, 255, 0.1);
}

.today {
  padding-top: 50rpx;
  height: 50%;
}

.newDate {
  font-size: 12px;
  color: rgb(0, 199, 119);
}

.hint {
  color: rgb(226, 218, 218);
  font-size: 14px;
  margin: 10px 0;
  text-align: center;
}

.city {
  color: white;
  font-size: 16px;
  text-align: right;
}

.temp {
  text-align: center;
}

.wendu {
  font-size: 32px;
}

.high {
  font-size: 16px;
}

.low {
  font-size: 16px;
  color: #d3c7c7;
}

.weather {
  text-align: center;
}

 .future {
  display: flex;
  flex-direction: row;
  height: 40%; 
  padding-left: 5rpx;
  background: white; 
  background: rgba(0, 0, 0, 0.3);
  box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.5);
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  border-radius: 10px;
}

.f-item {
  min-height: 100%;
  width: 170rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border: 1px solid pink;
  border-radius: 10px;
  padding-top: 10rpx;
  color: white; 
} 
.f-item view {
  margin: 8px 0;
  padding: 8px 0;
}